  $('.user-ad').on('mouseenter', function(event) {
      p = $('<p class="product-name"></p>')
      p.text(this.attributes['data-productname'].textContent);
      console.log(this,p);
      $(this).append(p);
    });

  $('.user-ad').on('mouseleave', function(event) {
      p = $('.user-ad p');
      p.remove();
    });

