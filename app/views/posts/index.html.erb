<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h2> <%= link_to post.text, post_path(post) %> </h2>
    <%= link_to "Edit #{post.text}", edit_post_path(post) %>
    <%= link_to "Delete #{post.text}", post_path(post), method: :delete %>
  <% end %>
<% else %>
  No posts have been added!
<% end %>

<a href='posts/new'>Create a post</a>
